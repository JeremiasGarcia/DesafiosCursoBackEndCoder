<div>
    <h2 style="color:blue;">Vista de Productos</h2>

    <% if(DB_PRODUCTOS.length > 0){ %>
        <div class="table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Foto URL</th> </tr>
                <% for(const producto of DB_PRODUCTOS) {%>
                <tr>
                    <td><%=producto.nombre%></td>
                    <td><%=producto.precio%></td>
                    <td>
                        <img width="40" src="<%=producto.fotoUrl%>" alt="">
                    </td>
                </tr>
                <% } %>
            </table>
        </div>
    <% } else { %>
    <h3 class="alert alert-warning">No se encontraron productos<h3>
    <% } %>
</div>
